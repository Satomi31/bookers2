<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :opinion %>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user_id) do %>
          <%= image_tag @book.user.get_profile_image %>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to 'Edit', edit_book_path(params[:id]) %></td>
      <td><%= link_to 'Destroy', book_path(params[:id]), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
</table>
