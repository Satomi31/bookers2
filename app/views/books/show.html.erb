

<%= render partial: 'info', locals: { user: @user, book_new: @book_new } %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user_id) do %>
          <%= image_tag @user.get_profile_image %>
          <%= @user.name %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
        <td><%= link_to 'Edit', edit_book_path(params[:id]) %></td>
        <td><%= link_to 'Destroy', book_path(params[:id]), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
